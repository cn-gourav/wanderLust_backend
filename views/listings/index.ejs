<% layout('/layout/bolierplate.ejs') %>

     <body>
          <h1>All Listings</h1>
          <!-- <form action="/listings/new" method="GET">
               <button> NEW FOrm</button>
          </form> -->

          <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
               <% for(let listings of allListings) { %>
                    <a href="/listings/<%= listings.id %>" class="listing-link">
                         <div class="card col">
                              <img src="<%= listings.image.url%>" class="card-img-top" alt="listings_img"
                                   style="height: 20rem;">

                              <div class="card-img-overlay"></div>
                              <div class="card-body">
                                   <p class="card-text">
                                        <b>
                                             <%= listings.title %>
                                        </b>
                                        <br>
                                        &#8377 <%= listings.price.toLocaleString("en-IN") %> /night
                                   </p>
                              </div>
                         </div>
                    </a>

                    <% } %>
          </div>


     </body>